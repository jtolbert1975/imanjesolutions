<div class="theader">
    <h1>Quotes</h1>
</div>
<!--Column Headers-->
<div class="trow">
    <!--ID-->
    <!--<div class="tcol-1">-->
        <!--<span class="table-header">ID</span>-->
    <!--</div>-->
    <!--Name-->
    <div class="tcol-2">
        <span class="table-header">Name</span>
    </div>
    <!--Email-->
    <div class="tcol-2">
        <span class="table-header">Email</span>
    </div>
    <!--Phone-->
    <div class="tcol-2">
        <span class="table-header">Phone</span>
    </div>
    <!--Skype-->
    <div class="tcol-3">
        <span class="table-header">About</span>
    </div>
    <!--Method-->
    <div class="tcol-2">
        <span class="table-header tooltip">Web Address</span>
    </div>
    <!--Request-->
    <div class="tcol-1">
        <span class="table-header">Budget</span>
    </div>

</div>

<!--Contacts List-->
{{#each quotes as |quote|}}
    <div class="trow">
        <!--ID-->
        <!--<div class="tcol-1">-->
            <!--<span class="table-cell"></span>-->
        <!--</div>-->
        <!--Name-->
        <div class="tcol-2">
            <span class="table-cell"><a href="" {{action 'showModal'  quote.id}} data-id={{quote.id}}>{{quote.name}}</a></span>
        </div>
        <!--Email-->
        <div class="tcol-2">
            <span class="table-cell">{{quote.email}}</span>
        </div>
        <!--Phone-->
        <div class="tcol-2">
            <span class="table-cell">{{quote.phone}}</span>
        </div>
        <!--Skype-->
        <div class="tcol-3">
            <span class="table-cell">{{quote.about}}</span>
        </div>
        <!--Method-->
        <div class="tcol-2">
            <span class="table-cell">{{quote.web_address}}</span>
        </div>
        <!--Request-->
        <div class="tcol-1">
            <span class="table-cell">{{quote.budget}}</span>
        </div>
    </div>

{{/each}}

{{outlet}}
{{#if isShowingModal quote as |qt|}}
  {{#modal-dialog
    close='toggleCenteredScrolling'
    translucentOverlay=true
    targetAttachment='none'
    container-class='centered-scrolling-container'
    overlay-class='centered-scrolling-overlay'
    wrapper-class='centered-scrolling-wrapper'
    }}

        <div class="row">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <form {{action 'ok' on='submit'}}>
            <div class="form-group">
                <label>Name</label>
                {{input  type="text" class="form-control" value=qt.name placeholder=qt.name}}
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" {{action 'ok'}}>OK</button>
            </div>
        </form>

  {{/modal-dialog}}
{{/if}}


